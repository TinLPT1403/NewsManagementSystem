@model BLL.DTOs.NewsArticleCreateDTO

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>NewsArticle</h4>
<hr />
<form asp-action="Create">
    <div class="form-group">
        <label asp-for="NewsTitle" class="control-label">News Title</label>
        <input asp-for="NewsTitle" class="form-control" />
        <span asp-validation-for="NewsTitle" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Headline" class="control-label">Headline</label>
        <input asp-for="Headline" class="form-control" />
        <span asp-validation-for="Headline" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewsContent" class="control-label">News Content</label>
        <textarea asp-for="NewsContent" class="form-control"></textarea>
        <span asp-validation-for="NewsContent" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewsSource" class="control-label">News Source</label>
        <input asp-for="NewsSource" class="form-control" />
        <span asp-validation-for="NewsSource" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewsStatus" class="control-label">News Status</label>
        <select asp-for="NewsStatus" class="form-control">
            <option value="true">True</option>
            <option value="false">False</option>
        </select>
        <span asp-validation-for="NewsStatus" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CategoryId" class="control-label">Category</label>
        <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
    </div>
    <div class="form-group">
        <label asp-for="NewsTagIds" class="control-label">Tags</label>
        <br />
        @foreach (var tag in ViewBag.Tags)
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="NewsTagIds" value="@tag.TagId" id="tag-@tag.TagId" />
                <label class="form-check-label" for="tag-@tag.TagId">@tag.TagName</label>
            </div>
        }
        <span asp-validation-for="NewsTagIds" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
