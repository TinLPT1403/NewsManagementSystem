@model DAL.Entities.SystemAccount

@{
    ViewData["Title"] = "DeleteAccount";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>DeleteAccount</h1>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>SystemAccount</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AccountName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AccountName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AccountEmail)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AccountEmail)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AccountRole)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AccountRole)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AccountPassword)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AccountPassword)
        </dd>
    </dl>

    <form asp-action="Delete" asp-route-id="@Model.AccountId" method="post">
        <input type="hidden" asp-for="AccountId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
